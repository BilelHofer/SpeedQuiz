<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style général de l'application -->
    <style name="Theme.SQ" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customisation du theme -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <!-- Style input text player -->
    <style name="Widget.SQ.TextInputLayout.player" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/littleWhite</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/black</item>
        <item name="hintTextAppearance">@style/TextAppearance.SQ.TextInputLayout.HintText</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- Style pour l'input text -->
    <style name="TextAppearance.SQ.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Style pour les bouton Outlined -->
    <style name="Widget.SQ.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/black</item>
        <item name="strokeColor">@color/littleWhite</item>
    </style>

    <!-- Style pour les bouton contained-->
    <style name="Widget.SQ.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/blue</item>
    </style>
    <!-- Style pour la bar de navigation -->
    <style name="Widget.SQ.appBar" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">@color/white</item>
    </style>
</resources>